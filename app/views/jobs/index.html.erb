<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Street address</th>
      <th>City</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Title</th>
      <th>Started at</th>
      <th>Completed at</th>
      <th>Price</th>
      <th>Instructions</th>
      <th>Uuid</th>
      <th>Qrcode data</th>
      <th>Stripe charge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user %></td>
        <td><%= job.street_address %></td>
        <td><%= job.city %></td>
        <td><%= job.latitude %></td>
        <td><%= job.longitude %></td>
        <td><%= job.title %></td>
        <td><%= job.started_at %></td>
        <td><%= job.completed_at %></td>
        <td><%= job.price %></td>
        <td><%= job.instructions %></td>
        <td><%= job.uuid %></td>
        <td><%= job.qrcode_data %></td>
        <td><%= job.stripe_charge_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
