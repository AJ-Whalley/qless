<div class="job">
<%= render 'layouts/hamburger_menu' %>
  
  <div class="job-profile">
    <%= image_tag @profile.image_url(:small) %>
  </div>


  <div class="text-fields">
  <div>
    <h3>Name:</h3>
    <p>
      <%= @profile.first_name %>
      <%= @profile.last_name %>
    </p>
  </div>

  <div>
    <h3>Date of Birth:</h3>
    <p><%= @profile.dob %></p>
  </div>

  <div>
    <h3>Bio:</h3>
    <p><%= @profile.bio %></p>
  </div>

  <div>
    <h3>Address:</h3>
    <p><%= @profile.street_address %></p>
  </div>

  <div>
    <h3>City:</h3>
    <p><%= @profile.city %></p>
  </div>

  <div>
    <h3>Post Code:</h3>
    <p><%= @profile.postal_code %></p>
  </div>

  <div>
    <h3>State:</h3>
    <p><%= @profile.state %></p>
  </div>

  <div>
    <h3>Country Code:</h3>
    <p><%= @profile.country_code %></p>
  </div>

  <div>
    <h3>Drivers License Number:</h3>
    <p><%= @profile.identification %></p>
  </div>

  <div>
    <h3>Jobs Applied For:</h3>
    <p>
      <% @profile.user.job_applications.each do |a| %>
      <%= a[:title] %>,
      <% end %>
    </p>
  </div>

  <span class="bottom-btn-one">
    <%= link_to 'Edit', edit_profile_path(@profile) %>
  </span>
  
  <span class="bottom-btn-two">
    <%= link_to 'Back', pages_user_home_path %>
  </span>

  </div>
</div>